#!/bin/bash

# Check that "PROPOSED:" and "issue-25" are not taken to be speakers.

trap 'rm $TMP1 $TMP2 $TMP3' 0
TMP1=`mktemp /tmp/speaker-XXXXXX` || exit 1
TMP2=`mktemp /tmp/speaker-XXXXXX` || exit 1
TMP3=`mktemp /tmp/speaker-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<foo> scribe: foo
<foo> bar: I say
<foo> ...true: I say
<foo> PROPOSED : close all actions
<bar> ..5:00 pm: really?
<foo> .hidden: One dot is a speaker
<foo> ..hidden: Two dots is a continuation
<foo> issue-25: this is a note.
EOF

cat >$TMP2 <<EOF
<div id=meeting class=meeting>
<h2>Meeting minutes</h2>
<section><p class="phone s01"><cite>bar:</cite> I say<br>
… true: I say</p>
<p class=summary>PROPOSED : close all actions</p>
<p class=irc><cite>&lt;bar&gt;</cite> ..5:00 pm: really?</p>
<p class="phone s02"><cite>.hidden:</cite> One dot is a speaker<br>
… hidden: Two dots is a continuation</p>
<p class=summary>issue-25: this is a note.</p>
</section>
</div>
EOF

perl scribe.perl $TMP1 | sed -n -e '/<div id=meeting/,/<\/div>/p' >$TMP3

diff -u $TMP2 $TMP3
