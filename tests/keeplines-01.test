#!/bin/bash

# Test --nokeeplines

trap 'rm $TMP1 $TMP2 $TMP3 $TMP4' 0
TMP1=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP2=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP3=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP4=`mktemp /tmp/topics-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<foo> Ben: I said
<foo> ... what I said
<foo> ... yesterday.
<foo> Bas: OK
<foo> ... then.
EOF

cat >$TMP2 <<EOF
<div id=meeting class=meeting>
<h2>Meeting minutes</h2>
<section><p class="phone s01"><cite>Ben:</cite> I said what I said yesterday.</p>
<p class="phone s02"><cite>Bas:</cite> OK then.</p>
</section>
</div>
EOF

perl scribe.perl --nokeeplines $TMP1 >$TMP3 || exit 1

# Extract just the minutes
sed -n -e '/<div id=meeting/,/<\/div>/p' $TMP3 >$TMP4

diff -u $TMP2 $TMP4
