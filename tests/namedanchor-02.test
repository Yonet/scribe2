#!/bin/bash

# Test that duplicate "namedAnchorHere" is ignored.

trap 'rm $TMP1 $TMP2 $TMP3 $TMP4' 0
TMP1=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP2=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP3=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP4=`mktemp /tmp/topics-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<foo> scribe: foo
<foo> Pete: Something else
<foo> NamedAnchorHere : Right "Here"! 
<foo> .. I wanted to say.
<foo> ... Very important
<foo> q+
<bar> q+
<baz> q?
<foo> namedanchorhere:Right "Here"!
<foo> ..at least to me.
EOF

cat >$TMP4 <<EOF
<div id=meeting class=meeting>
<h2>Meeting minutes</h2>
<section><p class="phone s01"><cite>Pete:</cite> Something else</p>
<p class=anchor id="Right_&quot;Here&quot;!"><a href="#Right_&quot;Here&quot;!">⚓</a></p>
<p class="phone s01"><cite>Pete:</cite> I wanted to say.<br>
… Very important</p>
<p class=irc><cite>&lt;foo&gt;</cite> namedanchorhere:Right &quot;Here&quot;!</p>
<p class="phone s01"><cite>Pete:</cite> at least to me.</p>
</section>
</div>
EOF

perl scribe.perl $TMP1 >$TMP2 || exit 1

# Extract just the minutes
sed -n -e '/<div id=meeting/,/<\/div>/p' $TMP2 >$TMP3

diff -u $TMP3 $TMP4
