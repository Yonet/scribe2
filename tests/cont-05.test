#!/bin/bash

# Test that continuation lines are recognized after the scribe writes
# a Ralph-link.

trap 'rm $TMP1 $TMP2 $TMP3 $TMP4' 0
TMP1=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP2=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP3=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP4=`mktemp /tmp/topics-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<foo> scribe: foo
<foo> Pete: Something else
<foo> .. I wanted to say.
<foo> ... Very important
<foo> -> http://example.org/example Example
<foo> ... This is a continuation.
<bar> present+ bar
<baz> q?
EOF

cat >$TMP4 <<EOF
<main id=meeting class=meeting>
<h2>Meeting minutes</h2>
<section><p id=x004 class="phone s01"><cite>Pete:</cite> Something else<br>
<a id=x005></a>… I wanted to say.<br>
<a id=x006></a>… Very important</p>
<p id=x007 class=summary><a href="http://example.org/example">Example</a></p>
<p id=x008 class="phone s01"><cite>Pete:</cite> This is a continuation.</p>
</section>
</main>
EOF

perl scribe.perl $TMP1 >$TMP2 || exit 1

# Extract just the minutes
sed -n -e '/<main/,/<\/main>/p' $TMP2 >$TMP3

diff -u $TMP3 $TMP4
