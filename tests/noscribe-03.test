#!/bin/bash

# Test the "scribenick: *" feature.

trap 'rm $TMP1 $TMP2 $TMP3 $TMP4' 0
TMP1=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP2=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP3=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP4=`mktemp /tmp/topics-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<Ann> scribenick: *
<Ben> Joe: I agree.
<Joe> Ben: me too.
<Ann> Joe and Ben agree.
<Ann> Scribenick: Ann
<Ann> Next
<Ben> So: what?
EOF

cat >$TMP4 <<EOF
<main id=meeting class=meeting>
<h2>Meeting minutes</h2>
<section><p class="phone s01"><cite>Joe:</cite> I agree.</p>
<p class="phone s02"><cite>Ben:</cite> me too.</p>
<p class=summary>Joe and Ben agree.</p>
<p class=summary>Next</p>
<p class=irc><cite>&lt;Ben&gt;</cite> So: what?</p>
</section>
</main>
EOF

perl scribe.perl $TMP1 >$TMP2
sed -n -e '/<main/,/<\/main>/p' $TMP2 >$TMP3
diff -u $TMP3 $TMP4
