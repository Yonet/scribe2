#!/bin/bash

# Test that a failed s/// is not taken to be a speaker line.

trap 'rm $TMP1 $TMP2 $TMP3 $TMP4' 0
TMP1=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP2=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP3=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP4=`mktemp /tmp/topics-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<foo> Joe: Original text
<foo> ... First continuation
<foo> s/Pete: text/Josh: There's no Pete/
<foo> ... Second continuation
EOF

cat >$TMP4 <<EOF
<main id=meeting class=meeting>
<h2>Meeting minutes</h2>
<section><p class="phone s01"><cite>Joe:</cite> Original text<br>
â€¦ First continuation</p>
<p class=irc><cite>&lt;foo&gt;</cite> s/Pete: text/Josh: There's no Pete/</p>
<p class="phone s01"><cite>Joe:</cite> Second continuation</p>
</section>
</main>
EOF

perl scribe.perl $TMP1 >$TMP2 || exit 1

# Extract just the minutes
sed -n -e '/<main/,/<\/main>/p' $TMP2 >$TMP3

diff -u $TMP4 $TMP3
