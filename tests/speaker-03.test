#!/bin/bash

# Check that speakers are distinguished from random text, with -implicit

trap 'rm $TMP1 $TMP2 $TMP3' 0
TMP1=`mktemp /tmp/speaker-XXXXXX` || exit 1
TMP2=`mktemp /tmp/speaker-XXXXXX` || exit 1
TMP3=`mktemp /tmp/speaker-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<foo> scribe: foo
<foo> bar: I say
<foo> ...true: I say
<foo> 2top: me too
<foo> ..5:00 pm: 5 is not a speaker
<foo> .hidden: I'm a speaker
<foo> but this: is a continuation
<foo> "dpv:nace" has a quote and is not a speaker
EOF

cat >$TMP2 <<EOF
<main id=meeting class=meeting>
<h2>Meeting minutes</h2>
<section><p class="phone s01"><cite>bar:</cite> I say<br>
… true: I say</p>
<p class="phone s02"><cite>2top:</cite> me too<br>
… 5:00 pm: 5 is not a speaker</p>
<p class="phone s03"><cite>.hidden:</cite> I'm a speaker<br>
… but this: is a continuation<br>
… &quot;dpv:nace&quot; has a quote and is not a speaker</p>
</section>
</main>
EOF

perl scribe.perl -implicit $TMP1 | \
  sed -n -e '/<main/,/<\/main>/p' >$TMP3

diff -u $TMP2 $TMP3
