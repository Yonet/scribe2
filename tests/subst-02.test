#!/bin/bash

# Test i/../../ command

trap 'rm $TMP1 $TMP2 $TMP3 $TMP4' 0
TMP1=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP2=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP3=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP4=`mktemp /tmp/topics-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<foo> Original text
<foo> Original text
<foo> i/Original/Topic: Second topic
<foo> More text
<foo> i/Original/Inserted line/
<foo> i/Inserted line/Another inserted line
EOF

cat >$TMP4 <<EOF
<div id=meeting class=meeting>
<h2>Meeting Minutes</h2>
<section><p class=summary>Original text</p>
</section>
<section>
<h3 id=x01>Second topic</h3>
<p class=summary>Another inserted line</p>
<p class=summary>Inserted line</p>
<p class=summary>Original text</p>
<p class=summary>More text</p>
</section>
</div>
EOF

perl scribe.perl $TMP1 >$TMP2 || exit 1

# Extract just the minutes
sed -n -e '/<div id=meeting/,/<\/div>/p' $TMP2 >$TMP3

diff -u $TMP3 $TMP4
