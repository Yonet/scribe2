#!/bin/bash

# Test that queue commands are ignored

trap 'rm $TMP1 $TMP2 $TMP3 $TMP4' 0
TMP1=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP2=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP3=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP4=`mktemp /tmp/topics-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<foo> First line
<foo> q+
<foo> q  +
<foo> queue+
<foo> queue   +
<foo> q+ foo
<foo> queue+ foo
<foo> queue + foo
<foo> q= foo, bar
<foo> q   = foo, bar
<foo> queue= foo, bar
<foo> q?
<foo> queue ?
<foo> +q
<foo> +queue
<foo> +q me
<foo> +queue me
<foo> = q
<foo> =  queue
<foo> ?q
<foo> ?queue
<foo> +queuing is not ignored
<foo> ?quoi is not ignored
EOF

cat >$TMP4 <<EOF
<div id=meeting class=meeting>
<h2>Meeting Minutes</h2>
<section><p class=summary>First line</p>
<p class=summary>+queuing is not ignored</p>
<p class=summary>?quoi is not ignored</p>
</section>
</div>
EOF

perl scribe.perl $TMP1 >$TMP2 || exit 1
sed -n -e '/id=meeting/,/<\/div>/p' $TMP2 >$TMP3

diff -u $TMP4 $TMP3
